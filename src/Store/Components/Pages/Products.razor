@page "/products"
@using DataEntities
@using Store.Services
@inject IConfiguration Configuration
@inject ProductService ProductService
@rendermode InteractiveServer
@attribute [StreamRendering(true)]

<PageTitle>Products</PageTitle>

<div class="products-header">
    <h1>Our Products</h1>
    <p>Discover premium outdoor gear for your next adventure</p>
</div>

@if (products == null)
{
    <div class="loading-container">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="products-grid">
        @foreach (var product in products)
        {
            <div class="product-card">
                <div class="product-image">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@($"{imagePrefix}{product.ImageUrl}")" alt="@product.Name" />
                    }
                    <div class="product-overlay">
                        <button class="btn-view">View Details</button>
                    </div>
                </div>
                <div class="product-info">
                    <h5 class="product-name">@product.Name</h5>
                    <p class="product-price">$@product.Price.ToString("N2")</p>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Product>? products;
    private string imagePrefix = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(500);
        imagePrefix = Configuration["ImagePrefix"]!;
        products = await ProductService.GetProducts();
    }
}
