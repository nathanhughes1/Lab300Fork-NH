@page "/about"
@rendermode InteractiveServer

<PageTitle>About</PageTitle>

<h1>About TinyShop</h1>

@if (hasQueryParameters)
{
    <p>Query parameters detected: @queryString</p>
}
else
{
    <p>Welcome to TinyShop - your premier destination for outdoor gear and adventure equipment!</p>
    <p class="text-muted">Tip: You can add query parameters to this page (e.g., /about?source=navigation) for additional functionality.</p>
}

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;

    private bool hasQueryParameters;
    private string queryString = string.Empty;

    protected override void OnInitialized()
    {
        var uri = new Uri(NavigationManager.Uri);
        queryString = uri.Query;
        hasQueryParameters = !string.IsNullOrEmpty(queryString);
    }
}